FilterModal {
    align: center middle;
}

FilterModal > Vertical {
    width: 60;
    height: auto;
    border: thick $primary;
    background: $surface;
    padding: 1 2;
}

FilterModal .title {
    width: 100%;
    text-align: center;
    text-style: bold;
    margin-bottom: 1;
}

FilterModal .button-row {
    width: 100%;
    height: auto;
    align: center middle;
    margin-top: 1;
}

FilterModal .button-row Button {
    margin: 0 2;
}

FilterModal .filter-row {
    width: 100%;
    height: auto;
    align: center middle;
    margin-top: 1;
}

FilterModal .filter-row Label {
    width: 30%;
    align: center middle;
    margin: 0 2;
}
